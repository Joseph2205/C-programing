#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int a,n=0;
    float m=0;
    printf("Enter the numbers\n");;
    do{
        scanf("%d",&a);
         printf("%d\n",a);
         if(a%2!=0){
             n=n+1;
             m=m+1;
}
        else if(a%2==0){
            m = m -0.5;
        }
    }
    while(n!=3);
    printf("%.1f",m);
   
    return 0;
}
