#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int  len,bre;
    scanf("%d %d",&len,&bre);
    int a = (len+len+bre+bre);
    int b = len*bre;
    printf("%d\n",a);
    printf("%d",b);
    
    return 0;
}
